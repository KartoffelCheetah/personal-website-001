html
  box-sizing border-box
  font-family var(--font-base)
  font-size 22px
  line-height 1.3
*
  box-sizing inherit
  margin 0
  padding 0
  border none
  outline none
  font-size 1em
  font-weight normal
  font-style normal
  text-decoration none
em, i
  font-style italic
strong, b
  font-weight bold
ul
  list-style-type none
body
  background var(--gray)
  color var(--wheat)
:root
  --font-decorated 'IM-Fell-english', sans-serif
  --font-base 'Midan', sans-serif
@font-face {
  font-family: 'IM-Fell-english';
  src: local('IM-Fell-english'), url('../fonts/fonts/Latin/IM-Fell-english.sc.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: 'Midan';
  src: local('Midan'), url('../fonts/fonts/Arabic/Midan.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}
