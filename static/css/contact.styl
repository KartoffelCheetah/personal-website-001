// notebook-paper-texture.jpg is in public domain
// http://www.photos-public-domain.com/2010/12/31/notebook-paper-texture/
@import 'variables.styl'
main
    display: flex
    // justify-content: center;
    // align-items: flex-start;
.wheel
    text-shadow: 0 0 1px black
    background-color: primaryColorD3
    color: secondaryColor
    font-weight: bold
    border-radius: 5% 0%
    display: flex
    width: 100%
    flex-direction: column
    border: 10px solid primaryColor
    box-shadow:
        0 0 0 10px mix(secondaryColor, primaryColorD3, 20%);
.wheel-segment
    margin: 2rem
    display: flex
    flex-direction: row
    justify-content:space-around
    a
        margin: mediumWidth
        border-radius: 2px
        border: 2px solid primaryColor
        background-color: primaryColorD3
        box-shadow: 1px 1px 3px black
        img,svg
            display: block
            margin: 1rem 1rem
            filter: blur(1px)
        svg path
            fill: secondaryColor!important
    a:hover
        box-shadow: -1px -1px 3px black
        img,svg
            filter: blur(0)
    a:active
        background-color: primaryTextColor
