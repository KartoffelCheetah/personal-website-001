/*Contact.styl*/
// notebook-paper-texture.jpg is in public domain
// http://www.photos-public-domain.com/2010/12/31/notebook-paper-texture/
#a
    background-image: linear-gradient(to right, orange 100%, orange 100%), url("../img/notebook-paper-texture.jpg");
#b
    background-image: linear-gradient(to right, violet 100%, violet 100%), url("../img/notebook-paper-texture.jpg");

#c
    background-image: linear-gradient(to right, rgb(102, 159, 226) 100%, rgb(102, 159, 226) 100%), url("../img/notebook-paper-texture.jpg");

#d
    background-image: linear-gradient(to right, rgb(105, 173, 80) 100%, rgb(105, 173, 80) 100%), url("../img/notebook-paper-texture.jpg");

main
    display: flex
    justify-content: center;
    align-items: flex-start;
.wheel
    border: 10px solid black
    background-color: hsla(360, 100%, 100%, 0.5)
    border-radius: 50%
    display: inline-flex
    flex-direction: column
    padding: 0 .8rem

.wheel-segment
    padding: .8rem 2rem
    display: flex
    justify-content: center
    align-items: center
    border-radius: 40% 10%
    font-weight: bold
    background-size: cover
    background-blend-mode: color;
    filter: grayscale(80%)
    div
        border-bottom: 3px solid orange;
        width: 100%

.wheel-segment:hover,
#a
    filter: grayscale(0%)

.wheel-segment:nth-child(2n+1)
    border-radius: 10% 40%

@supports (clip-path: polygon(0 0, 15% 100%, 85% 100%, 100% 0%))
    .wheel-segment
        clip-path: polygon(0 0, 15% 100%, 85% 100%, 100% 0%)
    .wheel
        padding: 0
